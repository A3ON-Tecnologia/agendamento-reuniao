RewriteEngine On

# Set hr_manager.php as the default page
DirectoryIndex dashboard/hr_manager.php

# Redirect root access directly to hr_manager.php (internal redirect)
RewriteRule ^/?$ dashboard/hr_manager.php [L]

# Redirect index.php to hr_manager.php (internal redirect)
RewriteRule ^index\.php$ dashboard/hr_manager.php [L]

# Prevent access to index.php entirely
RewriteCond %{THE_REQUEST} \s/+index\.php[\s?] [NC]
RewriteRule ^index\.php$ dashboard/hr_manager.php [R=301,L]
